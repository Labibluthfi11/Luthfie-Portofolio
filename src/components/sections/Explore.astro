---
import SectionHeader from "@/components/elements/SectionHeader.astro";
import Button from "@/components/ui/Button.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;

// Tech Stack Data - Sesuai dengan file yang ada di /public/assets/stack/
const techStack = [
  // Yang Udah Ada
  { name: "Next.js", icon: "/assets/stack/nextjs.png" },
  { name: "Astro", icon: "/assets/stack/astro.png" },
  { name: "Tailwind", icon: "/assets/stack/tailwind.png" },
  { name: "Node.js", icon: "/assets/stack/nodejs.png" },
  { name: "Nuxt.js", icon: "/assets/stack/nuxtjs.png" },
  { name: "Bootstrap", icon: "/assets/stack/bootstrap.png" },
  { name: "JavaScript", icon: "/assets/stack/js.png" },
  { name: "HTML", icon: "/assets/stack/html.png" },
  { name: "CSS", icon: "/assets/stack/css.png" },
  { name: "GitHub", icon: "/assets/stack/github.png" },
  { name: "Vercel", icon: "/assets/stack/vercel.png" },
  { name: "Netlify", icon: "/assets/stack/netlify.png" },
  { name: "VS Code", icon: "/assets/stack/vscode.png" },
  { name: "NPM", icon: "/assets/stack/npm.png" },
  { name: "Cloudflare", icon: "/assets/stack/cloudflare.png" },
  
  // Yang Perlu Ditambahin (download dulu)
  { name: "Laravel", icon: "/assets/stack/laravel.png" },
  { name: "Flutter", icon: "/assets/stack/flutter.png" },
  { name: "Postman", icon: "/assets/stack/postman.png" },
  { name: "MySQL", icon: "/assets/stack/mysql.png" },
];

// Stats Data
const stats = [
  { label: "Years Experience", value: "5+", icon: "‚è±Ô∏è" },
  { label: "Projects Completed", value: "20+", icon: "üöÄ" },
  { label: "GitHub Repos", value: "50+", icon: "üì¶" },
  { label: "Tech Mastered", value: "19+", icon: "üíª" },
];
---

<section class="py-8 sm:py-12 md:py-16 md:pb-12 site-container">
  <div class="space-y-6 sm:space-y-8 md:space-y-8">
    <SectionHeader title={title} description={description} />
  </div>

  <div class="explore-content w-full relative mt-6 sm:mt-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
      
      <!-- Tech Stack Box -->
      <div 
        class="explore-card bg-gradient-to-br from-primary/5 to-primary/10 dark:from-primary/10 dark:to-primary/5 relative overflow-hidden rounded-2xl border border-primary/20 dark:border-primary/30 p-6 sm:p-8 md:col-span-2"
        data-aos="fade-up-sm"
        data-aos-delay="100"
        data-aos-duration="600"
        data-aos-once="true"
      >
        <div class="mb-6">
          <h3 class="text-2xl sm:text-3xl font-brand text-primary dark:text-primary mb-2">
            Tech Stack & Tools
          </h3>
          <p class="text-sm sm:text-base text-neutral-600 dark:text-neutral-400">
            Technologies and tools I use to build modern applications
          </p>
        </div>
        
        <div class="tech-grid grid grid-cols-4 sm:grid-cols-5 md:grid-cols-6 lg:grid-cols-8 gap-3 sm:gap-4">
          {techStack.map((tech, index) => (
            <div 
              class="tech-item group relative aspect-square bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-4 sm:p-5 md:p-6 flex flex-col items-center justify-center transition-all duration-300 hover:scale-110 hover:shadow-lg hover:border-primary dark:hover:border-primary cursor-pointer overflow-hidden"
              data-aos="zoom-in"
              data-aos-delay={100 + (index * 30)}
              data-aos-duration="400"
              data-aos-once="true"
            >
              <div class="tech-icon w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 mb-2 transition-transform duration-300 group-hover:scale-110">
                <img 
                  src={tech.icon} 
                  alt={tech.name} 
                  class="w-full h-full object-contain"
                  loading="lazy"
                />
              </div>
              <span class="text-[10px] sm:text-xs font-medium text-neutral-700 dark:text-neutral-300 text-center leading-tight">
                {tech.name}
              </span>
              
              <!-- Hover Glow Effect -->
              <div 
                class="absolute inset-0 rounded-xl opacity-0 group-hover:opacity-10 transition-opacity duration-300 blur-xl bg-primary"
              ></div>
            </div>
          ))}
        </div>
      </div>

      
</section>

<style>
  .explore-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .explore-card:hover {
    transform: translateY(-4px);
  }

  .tech-grid, .stats-grid {
    position: relative;
    z-index: 1;
  }

  .tech-item {
    will-change: transform;
  }

  .stat-item {
    will-change: transform;
  }

  /* Responsive grid adjustments */
  @media (max-width: 640px) {
    .tech-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 0.75rem;
    }
  }

  /* Dark mode enhancements */
  @media (prefers-color-scheme: dark) {
    .explore-card {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
    }
  }
</style>